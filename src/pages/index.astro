---
import Layout from "../layouts/Layout.astro";
import {
  SignedIn,
  SignedOut,
  SignInButton,
  UserButton,
} from "@clerk/astro/components";
---

<Layout title="🔓 Público - Home">
  <main class="max-w-xl mx-auto py-12">
    <h1 class="text-3xl font-bold">App para acortar URLs</h1>
    <p>
      Esta es una aplicación para acortar URLs sólo para usuarios autenticados.
    </p>

    <SignedOut>
      <div class="mt-12">
        <SignInButton
        mode="modal"
        class="bg-blue-500 text-white px-4 py-2 rounded"
        
          >Iniciar sesión</SignInButton
        >
      </div>
    </SignedOut>

    <SignedIn>
      <UserButton showName/>
      <p class="mt-12">Ya has iniciado sesión. Entra a tu panel de urls.</p>
      <p class="mt-12">
        Si ya has iniciado sesión, entra a tu <a
          class="underline text-sky-300"
          href="/urls">panel de URLs.</a
        >
      </p>
    </SignedIn>
  </main>
</Layout>
